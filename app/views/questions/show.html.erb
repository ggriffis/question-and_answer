<div id="question">
  <h2>Question</h2>
  <p id="notice"><%= notice %></p>
  <p>
    <b>Description:</b>
    <%= @question.description %>
  </p>

  <p>
    <b>Answer:</b>
    <%= @question.answer %>
  </p>
</div>

<h3>Updates to this question or answer</h3>
<ul id='users'>
  <% @question.authorships.each do |authorship| %>
    <li>
      <%= 'Updated by ' + authorship.user.email + ' at ' + authorship.created_at.to_s  %>
    </li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>
